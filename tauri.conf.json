{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Lunar",
  "version": "0.1.0",
  "identifier": "com.lunar.app",
  "build": {
    "beforeDevCommand": "pnpm install",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Lunar",
        "width": 1200,
        "height": 800
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
